<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.moonbay.light.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SpeedServlet</servlet-name>
        <servlet-class>com.moonbay.light.SpeedServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifyPwdServlet</servlet-name>
        <servlet-class>com.moonbay.light.ModifyPwdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.moonbay.light.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifyPhoneServlet</servlet-name>
        <servlet-class>com.moonbay.light.ModifyPhoneServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>com.moonbay.light.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpLoadHeadServlet</servlet-name>
        <servlet-class>com.moonbay.light.UpLoadHeadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>com.moonbay.light.DownloadServlet</servlet-class>
        <init-param>
            <param-name>fileRoot</param-name>
            <param-value>h:/xampp/tomcat/webapps/newversion/</param-value>
        </init-param>
        <init-param>
            <param-name>contentType</param-name>
            <param-value>application/x-msdownload</param-value>
        </init-param>
        <init-param>
            <param-name>enc</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>HeartServlet</servlet-name>
        <servlet-class>com.moonbay.light.HeartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SpeedServlet</servlet-name>
        <url-pattern>/SpeedServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyPwdServlet</servlet-name>
        <url-pattern>/ModifyPwdServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyPhoneServlet</servlet-name>
        <url-pattern>/ModifyPhoneServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpLoadHeadServlet</servlet-name>
        <url-pattern>/UpLoadHeadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/DownloadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HeartServlet</servlet-name>
        <url-pattern>/HeartServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>DBManager</servlet-name>
        <servlet-class>com.moonbay.light.DBManager</servlet-class>
        <init-param>
            <param-name>DBUsername</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>DBPassword</param-name>
            <param-value/>
        </init-param>
        <init-param>
            <param-name>ConnectionURL</param-name>
            <param-value>jdbc:mysql://localhost:3306/airspeed?charaterEncoding=utf8</param-value>
        </init-param>
        <load-on-startup>0</load-on-startup>
        <iinit-param/>
    </servlet>
    <listener>
        <listener-class>com.moonbay.light.TimerListener</listener-class>
    </listener>
</web-app>
